{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "jsx": "react-native",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "jest",
      "react",
      "react-native",
      "@react-native-async-storage/async-storage",
      "expo-constants",
      "expo",
      "expo-router/types",
      "i18next",
      "react-i18next",
      "nativewind/types",
      "expo-linking/build/Linking",
      "expo-localization",
      "expo-secure-store",
      "expo-splash-screen",
      "expo-status-bar",
      "expo-web-browser",
      "react-native-purchases"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
} 